<% include partials/_header %>

<div class="container">

  <div class="row">
    <!--FORM-->
    <div class="col-md-5">
      <div class="card">
        <div class="card-body">
          <form action="/add" method="post">
            <div class="form-group">
              <input class="form-control" type="text" name="NombreCurso" placeholder="Nombre de curso">
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="Descripcion" placeholder="Descripcion">
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="Estado" placeholder="Estado">
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="Planeado" placeholder="Planeado">
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="Tema" placeholder="Tema">
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="Parcial" placeholder="Parcial">
            </div>
            <div class="form-group">
            </div>
            <button class="btn btn-secondary btn-block" type="submit">
              Guardar
            </button>
          </form>
        </div>
      </div>
    </div>

    <!-- LIST -->
    <div class="col-md-7">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>ID</th>
            <th>Curso</th>
            <th>Descripcion</th>
            <th>Estado</th>
            <th>Planeado</th>
            <th>Tema</th>
            <th>Parcial</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i < Curso.length; i++) { %>
            <tr>
              <td><%= i + 1%></td>
              <td><strong><%= Curso[i].NombreCurso %></strong></td>
              <td><%= Curso[i].Descripcion %></td>
              <td><%= Curso[i].Estado %></td>
              <td><%= Curso[i].Planeado %></td>
              <td><%= Curso[i].Tema %></td>
              <td><%= Curso[i].Parcial %></td>
              <td>
                <a></a>
                  
                <a href="/delete/<%= Curso[i]._id %>"
                  class="btn btn-danger">
                  Eliminar
                  <br>
                </a>
                <br>
                <a href="/edit/<%= Curso[i]._id %>" class="btn btn-info">
                  Editar
                </a>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>

    </div>
  </div>

</div>
